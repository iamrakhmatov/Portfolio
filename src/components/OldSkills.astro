---
import JavaScript from "@icons/JavaScript.astro";
import TypeScript from "@icons/TypeScript.astro";
import NodeJS from "@icons/NodeJS.astro";
import React from "@icons/React.astro";
import NestJS from "@icons/NestJS.astro";
import Postgres from "@icons/Postgres.astro";
import GraphQL from "@icons/GraphQL.astro";
import Prisma from "@icons/Prisma.astro";
import GitHub2 from "@icons/GitHub2.astro";
import Tailwind from "@icons/Tailwind.astro";
import TRPC from "@icons/TRPC.astro";
import NextJS from "@icons/NextJS.astro";
import AWS from "@icons/AWS.astro";
import Docker from "@icons/Docker.astro";
import Redux from "@icons/Redux.astro";
import Serverless from "@icons/Serverless.astro";
import GitMerge from "@icons/GitMerge.astro";
import GitPullRequest from "@icons/GitPullRequest.astro";
import GitDraft from "@icons/GitDraft.astro";
---

<section class="relative h-screen w-full scroll-mt-16" id="skills">
  <div
    class="absolute top-[25%] left-0 flex h-full w-screen items-center justify-center"
  >
    {/* Background Texts */}
    <div class="absolute left-2/3 top-1/3">
      <h1
        class="-ml-5 -mb-6 font-acme text-6xl text-purple-50 sm:-ml-0 sm:mb-20 sm:text-9xl sm:font-extrabold sm:text-purple-50/60"
      >
        TS
      </h1>
    </div>
    <div class="absolute right-[9%] top-0">
      <div class="flex justify-center items-center p-2">
        <h1
          class="font-acme text-4xl text-purple-50 sm:text-6xl sm:font-extrabold sm:text-indigo-50/50"
        >
          Git
        </h1>
        <GitDraft
          className="absolute -top-full -right-1/2 h-6 w-6 fill-indigo-300/30"
        />
        <GitPullRequest
          className="absolute right-full top-full h-8 w-8 fill-green-300/20"
        />
        <GitMerge
          className="absolute -left-1/3 -top-2/3 h-8 w-8 fill-purple-300/20"
        />
      </div>
    </div>
    <div class="absolute bottom-1/3 left-[15%]">
      <h1
        class="text-center -ml-5 -mb-6 font-acme text-6xl text-purple-50 sm:-ml-0 sm:mb-20 sm:text-5xl sm:font-extrabold sm:text-purple-100/60"
      >
        SQL
      </h1>
    </div>
    <div class="absolute bottom-[64%]">
      <h1
        class="-ml-5 -mb-6 font-acme text-6xl text-purple-50 sm:-ml-0 sm:mb-20 sm:text-6xl sm:font-extrabold sm:text-indigo-50/70"
      >
        Full-Stack
      </h1>
    </div>
    <div class="absolute top-[58%] right-[13%]">
      <h1
        class="font-acme text-xl text-blue-50 sm:text-4xl sm:font-extrabold sm:text-purple-100"
      >
        DevOps
      </h1>
      <Docker className="h-10 w-10 absolute -right-20 -top-14 opacity-20" />
    </div>
    <div class="absolute top-16 left-40">
      <h1
        class="font-acme text-6xl tracking-wider text-purple-50 sm:text-5xl sm:font-extrabold sm:text-indigo-100/30"
      >
        Serverless
      </h1>
      <Serverless />
    </div>
    <div class="absolute top-[55%]">
      <h1
        class="text-center font-acme text-3xl text-purple-50 sm:text-5xl sm:font-extrabold sm:text-purple-100/80"
      >
        Ecosystem
      </h1>
    </div>

    {/* Third level ------------------------------------------------------ */}
    <div
      class="absolute flex h-[55rem] w-[55rem] animate-spin-115 items-center justify-center rounded-full border-l border-b-2 border-t-2 border-purple-200/30"
    >
      <div class="absolute h-[39rem] w-[39rem] -rotate-[20deg]">
        <div
          class="absolute -top-[18px] -right-[18px] h-9 w-9 animate-spin-115-back"
        >
          <NestJS className="h-full w-full rotate-[20deg]" />
        </div>
      </div>
      <div class="absolute h-[39rem] w-[39rem] -rotate-[40deg]">
        <div class="absolute -top-4 -left-4 h-8 w-8 rotate-[40deg]">
          <Redux className="w-full h-full animate-spin-115-back" />
        </div>
        <div class="absolute -left-6 -bottom-6 h-12 w-12 rotate-[40deg]">
          <TRPC className="h-full w-full animate-spin-115-back" />
        </div>
      </div>
      <div class="absolute h-[39rem] w-[39rem] rotate-[20deg]">
        <div class="absolute -top-6 -right-6 h-12 w-12 animate-spin-115-back">
          <Postgres className="h-full w-full -rotate-[20deg]" />
        </div>
        <div class="absolute -left-5 -top-5 h-10 w-10 animate-spin-115-back">
          <Tailwind className="-rotate-[20deg] h-full w-full" />
        </div>
      </div>

      {/* One Box */}
      <div class="absolute h-[39rem] w-[39rem]">
        <div
          class="absolute -right-5 -bottom-5 h-10 w-10 animate-spin-115-back"
        >
          <AWS className="h-full w-full" />
        </div>
        <div class="absolute -left-5 -bottom-5 h-10 w-10 animate-spin-115-back">
          <GitHub2
            className="relative h-full w-full rounded-full border border-black bg-white shadow-md shadow-black/40"
          />
        </div>
      </div>
    </div>

    {
      /* Second level circle ----------------------------------------------------------------> */
    }
    <div
      class="absolute flex h-[38rem] w-[38rem] animate-spin-72 items-center border-dashed justify-center rounded-full border-b border-r-2 border-t-2 border-purple-200/80"
    >
      <div class="absolute h-[27rem] w-[27rem]">
        <div class="h-full w-full rotate-[20deg]">
          <div class="absolute -top-5 -left-5 h-10 w-10 -rotate-[20deg]">
            <Prisma className="h-full w-full animate-spin-72-back" />
          </div>
        </div>
      </div>

      <div class="absolute h-[27rem] w-[27rem]">
        <div
          class="absolute -bottom-[36px] -left-[36px] h-[72px] w-[72px] animate-spin-72-back"
        >
          <NextJS />
        </div>
        <div class="absolute -top-5 -right-5 h-10 w-10 animate-spin-72-back">
          <GraphQL className="w-full h-full" />
        </div>
      </div>
    </div>

    {
      /* First level circle ----------------------------------------------------------------> */
    }
    <div
      class="absolute flex h-[21rem] w-[21rem] animate-spin-75 items-center justify-center rounded-full border-l-2 border-r-2 border-gray-200/80"
    >
      <div class="absolute h-[15rem] w-[15rem] rotate-45">
        <div class="absolute -top-6 -left-6 h-12 w-12 animate-spin-75-back">
          <TypeScript className="h-full w-full -rotate-45 rounded-md" />
        </div>
      </div>
      <div class="absolute h-[15rem] w-[15rem]">
        <div class="absolute -bottom-6 -right-6 h-12 w-12 animate-spin-75-back">
          <React className="w-full h-full" />
        </div>
        <div class="absolute -bottom-6 -left-6 h-12 w-12 animate-spin-75-back">
          <NodeJS className="w-full h-full" />
        </div>
      </div>
    </div>
    {/* ---------------------- C E N T E R ---------------------- */}
    <div class="absolute flex h-24 w-24 items-center justify-center">
      <div class="group relative">
        <div
          class="absolute -inset-1 animate-tilt bg-gradient-to-br from-yellow-600 via-yellow-600 to-purple-600 opacity-75 blur transition duration-1000 group-hover:opacity-100 group-hover:duration-200"
        >
        </div>
        <JavaScript className="w-16 h-16 relative" />
      </div>
    </div>
  </div>
</section>
