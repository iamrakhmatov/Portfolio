---
import TypeScript from "@icons/TypeScript.astro";

const { className } = Astro.props;
---

<!-- TypeScript First circle -->
<div
  class:list={[
    "w-72 h-72 flex items-center justify-center relative bg-gradient-to-br from-blue-50/80 rounded-lg",
    className,
  ]}
>
  <div
    class="w-52 h-52 relative rounded-lg bg-gradient-to-br from-blue-100/90 flex items-center justify-center"
  >
    <!-- Second border -->
    <div
      class="relative w-52 h-52 left-0 top-0 flex items-center justify-center"
    >
      <!-- Gradient Lines -->
      <!-- <div
        class="absolute right-full h-[22rem] w-[1px] bg-gradient-to-b from-white"
      >
      </div>
      <div
        class="absolute left-full h-[22rem] w-[1px] bg-gradient-to-b from-white"
      >
      </div>
      <div
        class="absolute bottom-full w-[22rem] h-[1px] bg-gradient-to-r from-white"
      >
      </div>
      <div
        class="absolute top-full w-[22rem] h-[1px] bg-gradient-to-r from-white"
      >
      </div> -->
      <!-- Third circle -->
      <div
        class="w-36 h-36 left-0 top-0 rounded-lg flex items-center justify-center bg-gradient-to-br from-blue-200"
      >
        <!-- Square border -->
        <div
          class="relative w-[8.5rem] h-[8.5rem] left-0 top-0 flex items-center justify-center"
        >
          <!-- Gradient Lines -->
          <!-- <div
            class="absolute right-full h-96 w-[1px] bg-gradient-to-b from-white"
          >
          </div>
          <div
            class="absolute left-full h-96 w-[1px] bg-gradient-to-b from-white"
          >
          </div>
          <div
            class="absolute bottom-full w-96 h-[1px] bg-gradient-to-r from-white"
          >
          </div>
          <div
            class="absolute top-full w-96 h-[1px] bg-gradient-to-r from-white"
          >
          </div> -->
          <TypeScript className="w-24 h-24 opacity-50 rounded-lg" />
          <!-- Diagonal Gradient Lines -->
          <div
            class="absolute h-[32rem] w-[1px] bg-gradient-to-b rotate-45 from-white"
          >
          </div>
          <div
            class="absolute h-[32rem] w-[1px] bg-gradient-to-b -rotate-45 from-white"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
