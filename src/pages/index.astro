---
import Layout from "@layouts/Layout.astro";
import HeroSection from "@components/sections/HeroSection.astro";
import Career from "@components/sections/Career.astro";
import SocialMedia from "@components/parts/SocialMedia.astro";
import Footer from "@components/sections/Footer.astro";
import Skills from "@components/sections/Skills.astro";
---

<Layout>
  <HeroSection />
  <Skills />
  <div class="w-full my-16 flex justify-center relative items-center">
    <div class="w-96 h-[1px] bg-gradient-to-r from-white via-slate-200"></div>
    <div class="w-1.5 h-1.5 absolute rounded-full bg-slate-200"></div>
    <div class="w-4 h-4 absolute rounded-full border-slate-200 border"></div>
  </div>
  <Career />
  <SocialMedia />
  <Footer />
</Layout>
