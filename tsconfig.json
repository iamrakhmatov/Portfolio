{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@images/*": ["src/images/*"],
      "@utils/*": ["src/utils/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "solid-js"
  }
}
